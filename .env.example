# Application
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/wifizone

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email (Mailtrap for development)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password
SMTP_FROM=WiFi Zone <noreply@wifi-zone.com>

# Cloudflare R2 (S3 compatible)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=wifizone-documents
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Mobile Money APIs (For future implementation)
MTN_API_KEY=your-mtn-api-key
MTN_API_SECRET=your-mtn-api-secret
MTN_API_URL=https://api.mtn.com
ORANGE_API_KEY=your-orange-api-key
ORANGE_API_SECRET=your-orange-api-secret
ORANGE_API_URL=https://api.orange.com
MOOV_API_KEY=your-moov-api-key
MOOV_API_SECRET=your-moov-api-secret
MOOV_API_URL=https://api.moov.com
WAVE_API_KEY=your-wave-api-key
WAVE_API_SECRET=your-wave-api-secret
WAVE_API_URL=https://api.wave.com

# Business Rules
PLATFORM_COMMISSION=0.05
REFERRAL_COMMISSION=0.10
WITHDRAWAL_FEE=0.02
MIN_WITHDRAWAL_AMOUNT=5000
WITHDRAWAL_FEE_FIXED=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Email Verification
EMAIL_VERIFICATION_EXPIRATION=24h
PASSWORD_RESET_EXPIRATION=1h

# Ticket Settings
TICKET_EXPIRATION_DAYS=30
